<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    tools:context="com.example.android.helloandroid.MainActivity">

    <ImageView
        android:id="@+id/dektop_bckgrnd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/desktop"
        />

    <TextView
        android:id="@+id/udacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/udacity"
        android:layout_centerHorizontal="true"
        android:textSize="70sp"
        android:textColor="#000000"
        android:paddingTop="4dp"
        android:fontFamily="sans-serif-light"
        />

    <TextView
        android:id="@+id/phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quote"
        android:layout_below="@id/udacity"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="50dp"
        android:textSize="@dimen/size1"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorBlack"
        />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_number"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="30dp"
        android:textSize="@dimen/size1"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/colorBlack"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textSize="@dimen/size2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorBlack"
        android:fontFamily="sans-serif-smallcaps"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/website"
        android:autoLink="web"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="300dp"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        />

</RelativeLayout>
